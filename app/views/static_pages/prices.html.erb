<% provide(:language, 'english') %>
<% provide(:title, 'Prices') %>

<div class="center hero-unit">
  <h1>Prices</h1>
  <h2>Call for more information or to schedule an estimate</h2>
</div>

<div class="row-fluid">
  <div class="span6">
    <h3>Interlock</h3>
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Type</th>
          <th>Price (foot squared)</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Small Paving Stone</td>
          <td>$4</td>
        </tr>
        <tr>
          <td>Big Paving Stone</td>
          <td>$3</td>
        </tr>
        <tr><td colspan="2">&nbsp;</td></tr>
        <tr>
          <td>Linear installation</td>
          <td>$0 (included in price)</td>
        </tr>
        <tr>
          <td>Modular installation</td>
          <td>$1</td>
        </tr>
        <tr>
          <td>Random installation (broken edge stone)</td>
          <td>$2</td>
        </tr>
        <tr><td colspan="2">&nbsp;</td></tr>
        <tr>
          <td>90 degree installation</td>
          <td>$0 (included in price)</td>
        </tr>
        <tr>
          <td>45 degree installation</td>
          <td>$2</td>
        </tr>
        <tr>
          <td colspan="2">
            And in <em>addition</em>, this includes a 2 year warranty on all work performed!
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="span6">
    <h3>Retaining Walls</h3>
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Type</th>
          <th>Price (foot)</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Blocks under 4 inches in height</td>
          <td>$2</td>
        </tr>
        <tr>
          <td>Blocks over 4 inches in height</td>
          <td>$4</td>
        </tr>
        <tr>
          <td>Finishing Blocks (caps)</td>
          <td>$5</td>
        </tr>
        <tr><td colspan="2">&nbsp;</td></tr>
        <tr>
          <td>Modular installation (mixed size blocks)</td>
          <td>$6 (per 6" x 12" facing)</td>
        </tr>
        <tr>
          <td colspan="2">
            And in <em>addition</em>, this includes a 2 year warranty on all work performed!
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
