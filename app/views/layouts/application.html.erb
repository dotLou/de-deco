<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title), yield(:language)) %></title>
    <%= stylesheet_link_tag "application", media: "all" %>
    <%= stylesheet_link_tag "bootstrap-glyphicons", media: "all" %>
    <%= javascript_include_tag "jquery-1.10.2.min" %>
    <%= javascript_include_tag "bootstrap.min" %>
    <%= csrf_meta_tags %>
    <%= render "layouts/shim" %>
    <%= favicon_link_tag 'favicon.ico' %>
  </head>
  <body>
    <%= render "layouts/header" %>
    <div class="container">
      <%= yield %>
      <%= render "layouts/footer" %>
    </div>
  </body>
</html>
